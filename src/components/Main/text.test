        /* 기술 트리 스타일 */
.techbox {
  position: relative;
  width: 100%;
  height: 20%;
  margin-top: 25%;
}

.techbox p {
  font-size: 4.5vw;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  margin-bottom: 1%;
}

.skill {
  position: absolute;
  width: 20%;
  height: 100%;
}

.skill p {
  font-size: 2vw;
  padding-top: 5%;
  padding-bottom: 8%;
}

.frontskill {
  transform: translateX(20%);
}

.backendskill {
  transform: translateX(140%);
}

.serverskill {
  transform: translateX(260%);
}

.tool {
  transform: translateX(380%);
}

.skillbox {
  display: flex;
  justify-content: center;
  align-items: center;
}

.techskillimg {
  width: 30%;
  height: auto;
  margin-left: 10%;
}
